{
  "paper_id": "P05",
  "repo_name": "bigcode-project/starcoder",
  "env": {
    "type": "micromamba",
    "setup_commands": [
      "micromamba create -n starcoder python=3.8 -y",
      "micromamba activate starcoder",
      "micromamba install -c conda-forge -y numpy scipy pandas scikit-learn",
      "micromamba install -c huggingface -y transformers peft bitsandbytes"
    ]
  },
  "steps": [
    {
      "id": "install_dependencies",
      "description": "Install the required dependencies",
      "working_dir": ".",
      "commands": [
        "micromamba run -n starcoder pip install -r requirements.txt"
      ],
      "expected_artifacts": [
        "starcoder environment with installed dependencies"
      ]
    },
    {
      "id": "run_main_experiment",
      "description": "Run the main experiment",
      "working_dir": "chat",
      "commands": [
        "micromamba run -n starcoder python train.py"
      ],
      "expected_artifacts": [
        "Trained model"
      ]
    }
  ]
}